#include<iostream>
#include<string>
#include<stdio.h>
using namespace std;

struct Details{
    int roll;
    int age;
    string name;
} d[5];

int main()
{
    for(int i=0;i<5;i++)
    {
        cout<<"Enter the name of student "<<i+1<<" : ";
        cin>>d[i].name;
        cout<<"Enter the roll number of student "<<i+1<<" : ";
        cin>>d[i].roll;
        cout<<"Enter the age of student "<<i+1<<" : ";
        cin>>d[i].age;
        cout<<endl;
    }
    for(int i=0;i<5;i++)
    {
        if(d[i].roll==2)
        {
            cout<<"Name of student "<<i+1<<" : "<<d[i].name<<endl;
            cout<<"Roll Number of student "<<i+1<<" : "<<d[i].roll<<endl;
            cout<<"Age of student "<<i+1<<" : "<<d[i].age<<endl;
            cout<<endl;
        }
    }
    return 0;

}